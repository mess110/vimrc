set $mode_system (F9) shutdown, (F10) reboot, (F11) logout, (F12) autolock, (Pause) lock, (w)ater, (m)ore
mode "$mode_system" {
    # bindsym s exec --no-startup-id i3cyclebar suspend, mode "default"
    # bindsym h exec --no-startup-id i3cyclebar hibernate, mode "default"
    bindsym F9 exec --no-startup-id i3cyclebar shutdown, mode "default"
    bindsym F10 exec --no-startup-id i3cyclebar reboot, mode "default"
    bindsym F11 exec --no-startup-id i3cyclebar logout, mode "default"
    bindsym F12 exec --no-startup-id i3cyclebar toggleautolock, mode "default"
    bindsym Pause exec --no-startup-id i3cyclebar lock, mode "default"
    bindsym w exec --no-startup-id i3cyclebar drink-water, mode "default"
    bindsym m mode "$mode_launcher"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

set $mode_launcher (f)loating, (r)esize, (k)eyboard, (c)alendar, (s)ound, (b)luetooth
mode "$mode_launcher" {
        # toggle tiling / floating
        bindsym f floating toggle, mode "default"
        bindsym r mode "resize"
        bindsym k exec --no-startup-id i3cyclebar togglelayout, mode "default"
        bindsym c exec --no-startup-id zenity --calendar, mode "default"
        bindsym s exec --no-startup-id pavucontrol, mode "default"
        bindsym b exec --no-startup-id blueman-manager, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command ~/vimrc/bin/i3cyclebar statusbar
        position top

        font pango:monospace 12

        colors {
                background #$bgcolor
                statusline #$txtcolor
                separator #$txtcolor
                focused_workspace  #$fgcolor #$bgcolor #$txtcolor
                # focused_workspace  #$fgcolor #$fgcolor #$bgcolor
                inactive_workspace #$bgcolor #$bgcolor #$txtcolor
        }
}



