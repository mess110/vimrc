separator=true
markup=none

[wireless]
# command=iw dev 2>/dev/null | awk '/ssid/ {print "ğŸ›œ " $2}'
command=iw dev 2>/dev/null | awk '/ssid/ {print "ğŸ›œ wifi"}'
interval=10
color=#c0c0c0

[ethernet]
# command=ip route get 1.1.1.1 2>/dev/null | awk '{print "ğŸŒ " $7}'
command=ip route get 1.1.1.1 2>/dev/null | awk '{print "ğŸŒ wired"}'
interval=10
color=#c0c0c0

[disk]
# command=df -h / | awk 'NR==2 {print "ğŸ’¾ " $3 "/" $2}'
command=df -h / | awk 'NR==2 {sub(/G/,"",$3); sub(/G/,"",$2); print "ğŸ’¾ "$3"/"$2" GB"}'
interval=30
color=#c0c0c0

[memory]
# command=free -h | awk '/Mem:/ {print "ğŸ " $3 "/" $2}'
command=free -h | awk '/Mem:/ {sub(/Gi/,"",$3); sub(/Gi/,"",$2); print "ğŸ "$3"/"$2" GB"}'
interval=10
color=#c0c0c0

[cpu_temp]
command=sensors | awk '/Package id 0/ {sub(/^\+/,"",$4); printf "ğŸŒ¡ï¸CPU %.0fÂ°C",$4}'
interval=5
color=#c0c0c0

[gpu_temp]
command=sh -c 't=$(nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader | awk "{printf \"%.0f\", \$1}"); echo "ğŸŒ¡ï¸GPU ${t}Â°C"'
interval=5
color=#c0c0c0

[nvme_temp]
command=sensors | awk '/Composite:/ {gsub("\\+|Â°C","",$2); if ($2>max) max=$2} END {if (max) printf "ğŸŒ¡ï¸NVMe %.0fÂ°C\n", max}'
interval=10
color=#c0c0c0

[nic_temp]
command=sh -c 't=$(sensors | awk "/MAC Temperature:/ {gsub(\"\\+|Â°C\",\"\",\$3); printf \"%.0f\",\$3}"); if [ -n \"$t\" ]; then echo "ğŸŒ¡ï¸NIC ${t}Â°C"; [ \"$t\" -ge 70 ] && exit 33 || ([ \"$t\" -ge 55 ] && exit 36 || exit 0); else echo "ğŸŒ¡ï¸NIC N/A"; exit 0; fi'
interval=10
color=#c0c0c0

[audio]
command=~/.local/bin/i3cycleaudio
interval=5
color=#c0c0c0

[time]
command=sh -c '[ "$BLOCK_BUTTON" = 1 ] && zenity --calendar & echo "$(~/.local/bin/i3cyclebar hourtoicon)" $(date "+%Y-%m-%d %H:%M:%S")'
interval=1
color=#c0c0c0

[autolock]
command=sh -c '~/.local/bin/i3cyclebar showautolock'
interval=1
color=#c0c0c0
